# Uncomment the next line to define a global platform for your project
 platform :ios, '9.0'

target 'obk-ios' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Architecture
  pod 'ReactorKit'

  # Networking
  pod 'Alamofire'
  pod 'Moya'
  pod 'Moya/RxSwift'
  pod 'MoyaSugar'
  pod 'MoyaSugar/RxSwift'

  # Model
  pod 'Argo'
  pod 'Curry'
  pod 'Runes'

  # Rx
  pod 'RxCocoa'
  pod 'RxDataSources'
  pod 'RxGesture'
  pod 'RxKeyboard'
  pod 'RxOptional'
  pod 'RxReusable'
  pod 'RxSwift'
  pod 'RxSwiftExt'
  pod 'RxSwiftUtilities'
  
  # UI
  pod 'SnapKit'
  
  # Logging
  pod 'CocoaLumberjack/Swift'
  
  # Misc.
  pod 'KeychainAccess'
  pod 'ReusableKit'
  pod 'Then'

  target 'obk-iosTests' do
    inherit! :search_paths
    pod 'RxTest'
    pod 'RxExpect'
  end

end
